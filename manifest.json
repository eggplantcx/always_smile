{
    "name": "Always Smile",
    "version": "1.0",
    "description": "Redirects you from Amazon to Amazon Smile :)",
    "background":{
        "scripts": ["js/background.js"]
    },
    "permissions":[
        "webRequest",
        "webRequestBlocking",
        "storage",
        "*://*.amazon.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action":{
      "default_popup": "html/popup.html"
    },
    "manifest_version": 2
  }